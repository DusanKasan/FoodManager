{block content}

<table id="foods-list">
	<thead>
		<th>
			{_}Category{/_}
		</th>
		<th>
            {_}Number of foods{/_}
		</th>
	</thead>
{foreach $categories as $category}
	<tr>
		<td>
			<a n:href="Foods:list tags => $category->id_tag" class="food-link">{ucfirst($category->tag)}</a>
		</td>
		
		<td>
			{$category->number_of_foods}
		</td>
	</tr>
{/foreach}

</table>
{/block}


{block head}

{/block}
